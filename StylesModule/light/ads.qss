
/*
 * Default style sheet on Windows Platforms
 * Note: Always use CSS-classes with and without "ads--" namespace to support Qt4 & Qt5
 */

ads--CDockContainerWidget {
    border: none;
    background: #EAF5FF;
    margin: 0px;
    padding: 0px;
}

ads--CFloatingDockContainer {
    border: none;
    margin: 0px;
    padding: 0px;
}

ads--CDockAreaTabBar
{
    background: #D4D4D4;
}

QScrollBar#ADSTabAreaHorizontalScrollBar
{
    min-height: 3px;
    max-height: 3px;
    background: #D4D4D4;
}

ads--CDockWidgetTab
{
    background: #F3F3F3;
    border-color: #ffffff;
    border-style: solid;
    border-width: 0 1px 0 0;
    padding: 10px 0px 10px 10px;
    margin: 0px;
}

ads--CDockWidgetTab[activeTab="true"]
{
    background: #ffffff;
    padding: 10px 0px 10px 10px;
}

ads--CDockWidgetTab QLabel
{
    color: #9d9d9d;
    background: #F3F3F3;
    margin-right: 10px;
}

ads--CDockWidgetTab QLabel#IconLabel
{
    color: #9d9d9d;
    background: #F3F3F3;
    margin: 0px;
}

ads--CDockWidgetTab[activeTab="true"] QLabel#IconLabel
{
    background: #ffffff;
}

ads--CDockWidgetTab[activeTab="true"] QLabel
{
    color: #9d9d9d;
    background: #ffffff;
}

ads--CDockAreaWidget {
    padding: 0px;
    margin: 0px;
}

ads--CDockAreaTabBar {
    margin: 0px;
    padding: 0px;
}

ads--CDockAreaTitleBar {
    background: #F3F3F3;
    margin: 0px;
    padding: 0px;
}

ads--CDockManager #tabsMenuButton,
#closeButton,
#undockButton
{
	padding: 0px 0px;
}

ads--CDockManager QScrollArea#dockWidgetScrollArea
{
	padding: 0px;
	border: none;
}

ads--CDockWidgetTab QPushButton#tabCloseButton
{
    qproperty-icon: url(" ");
    background: none;
    border: none;
    padding: 3px;
    max-width: 10px;
    max-height: 10px;
    min-width: 10px;
    min-height: 10px;
    border-image: url(:/menu_bar/close.svg);
}

ads--CDockWidgetTab QPushButton#tabCloseButton:hover
{
    border-image: url(:/menu_bar/close-hover.svg);
}

QWidget #tabCloseButton:pressed
{
}

QWidget #tabsMenuButton {
	qproperty-icon: url(:/rc/ads/tabs-menu-button.svg);
	qproperty-iconSize: 16px;
    padding-left: 10px;
    padding-right: 10px;
    border: none;
    border-radius: 0px;
}

QWidget #dockAreaCloseButton {
	qproperty-icon: url(:/rc/ads/close-button.svg);
	qproperty-iconSize: 16px;
    padding-left: 10px;
    padding-right: 10px;
    border: none;
    border-radius: 0px;
}

QWidget #detachGroupButton {
	qproperty-icon: url(:/rc/ads/detach-button.svg);
	qproperty-iconSize: 16px;
    padding-left: 10px;
    padding-right: 10px;
    border: none;
    border-radius: 0px;
}

QWidget #tabsMenuButton:hover {
    background: #ececec;
}

QWidget #dockAreaCloseButton:hover {
    background: #ececec;
}

QWidget #detachGroupButton:hover {
    background: #ececec;
}

ads--CDockManager {
    background: #ffffff;
    border: none;
    padding: 0px;
    margin: 0px;
}

QGroupBox QPushButton:disabled { /* bug fix */
  background: #1c3e55;
  color: #787878;
}